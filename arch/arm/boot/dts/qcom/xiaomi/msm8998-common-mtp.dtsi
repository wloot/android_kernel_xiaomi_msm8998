&pmi8998_haptics {
	status = "okay";
	qcom,wave-play-rate-us = <5000>;
	qcom,wave-shape = "sine";
	qcom,brake-pattern = [03 02 00 00];
};

&red_led { /* Notification LED */
	linux,name = "white";
	qcom,start-idx = <1>;
	qcom,idx-len = <11>;
	qcom,duty-pcts = [00 05 0a 0f 14 1d 28 32 3c 4b 64];
	qcom,lut-flags = <0x1f>;
	qcom,pause-lo = <2000>;
	qcom,pause-hi = <1000>;
	qcom,ramp-step-ms = <100>;
	qcom,use-blink;
	status = "okay";
};

&blue_led { /* Left button backlight */
	linux,name = "button-backlight";
};

&green_led { /* Right button backlight */
	linux,name = "button-backlight1";
};
